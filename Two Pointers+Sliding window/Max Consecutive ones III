class Solution {
    public int longestOnes(int[] nums, int k) {
        int n=nums.length;
        int start=0,max=0,zerocount=0;
        for(int end=0;end<n;end++){
            if(nums[end]==0) zerocount++;
            while(zerocount>k){
                if(nums[start]==0){
                    zerocount--;
                }
                start++;
            }
            max=Math.max(max,end-start+1);
        }
        return max;
    }
}
